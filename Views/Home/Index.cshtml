@{
    Layout = "~/views/Shared/AllPages/Layout.cshtml";
}
    <br />
    <!--Caousel-->
    <div style="padding-left:125px; padding-right:125px; margin-bottom:20px;" id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/pic1.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  BLOOD BAGS   </h2>
                    </div>
                </div>
            </div>
            <div class="item">
                <img src="~/images/pic2.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  Ansell surgical gloves   </h2>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/images/pic3.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  Butterfly NeedleS  </h2>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/images/pic4.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  Netto Surgical Tape   </h2>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/images/pic5.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  Medicines   </h2>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/images/pic6.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  Urine BAGS   </h2>
                    </div>
                </div>
            </div>

            <div class="item">
                <img src="~/images/pic7.jpg">
                <div class="container">
                    <div class="carousel-caption">
                        <h2 style="color:GrayText">  Burite infusion set   </h2>
