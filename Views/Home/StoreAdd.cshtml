@model MedicalAndSurgical.Models.Store

@{
    Layout = "~/views/Shared/Stock/Layout.cshtml";
}

<br />
<div class="bs-docs-header" id="content" style="background-color:darkviolet; color:white; padding-top:20px; padding-bottom:20px;" tabindex="-1">
    <div class="container">
        <h3>
            Please Enter the Name, Phone No or Address to Add new Store.
        </h3>
        @using (@Html.BeginForm("StoreAddWork", "Home", FormMethod.Post))
        {
            <label>Store Name : </label>
            @Html.TextBoxFor(model => model.Name)<br />
            <label>Store PhoneNO  : </label>
            @Html.TextBoxFor(model => model.PhoneNo)<br />
            <label>Store Address : </label>
            @Html.TextBoxFor(model => model.Address)<br />
            <input type="submit" id="b1" value="Add" />
        }
        @{Html.EndForm();}
    </div>
</div>